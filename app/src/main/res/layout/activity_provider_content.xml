<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.exerciseapp.activity.provider.ProviderContentActivity">

    <TextView
        android:id="@+id/add_to_book"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="添加数据到Book表"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/colorFifteen"
        />

    <TextView
        android:id="@+id/query_to_book"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="查询数据到Book表"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/colorFifteen"
       android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/update_to_book"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="修改数据到Book表"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/colorFifteen"
        android:layout_marginTop="10dp"

        />
    <TextView
        android:id="@+id/delete_to_book"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="删除数据之Book表"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/colorFifteen"
        android:layout_marginTop="10dp"

        />

    
</LinearLayout>
